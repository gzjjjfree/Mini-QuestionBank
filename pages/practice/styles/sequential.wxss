/* 题目容器样式 */
.questions-container {
    padding: 5rpx;
    background-color: #f5f5f5;
    /*min-height: 100vh;*/
    box-sizing: border-box;
    padding-bottom: 280rpx; /* 为题目容器添加底部内边距，避免内容被遮挡, 根据按钮总高度调整 */
}

/* 题目卡片样式 */
.question-card {
    background: white;
    border-radius: 20rpx;
    padding: 40rpx 20rpx;
    box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
    margin-bottom: 30rpx;
}

/* 题目头部样式 */
.question-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.question-number {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
}

.question-difficulty {
    font-size: 26rpx;
    color: #666;
    background: #f8f9fa;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
}

.right-group {
    display: flex;
    align-items: center;
    gap: 20rpx; /* 控制右边两个元素之间的间距 */
}



/* 选项容器样式 */
.question-options {
    margin-top: 20rpx;
}

.question-options .option-item {
    padding: 25rpx 30rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 12rpx;
    font-size: 32rpx;
    color: #333;
    line-height: 1.5;
    transition: all 0.3s ease;
    cursor: pointer;
}

/* 选中状态 */
.option-item.selected {
    background: #e3f2fd;
    border-color: #2196f3;
}

/* 正确状态 */
.option-item.correct {
    background: #e8f5e8;
    border-color: #4caf50;
    color: #2e7d32;
}

/* 错误状态 */
.option-item.wrong {
    background: #ffebee;
    border-color: #f44336;
    color: #c62828;
}

/* 选项标签 */
.option-label {
    font-weight: bold;
    margin-right: 15rpx;
    min-width: 40rpx;
}

.option-text {
    flex: 1;
}

/* 答案图标 */
.answer-icon {
    margin-left: 15rpx;
    font-weight: bold;
    font-size: 32rpx;
}

.option-item.correct .answer-icon {
    color: #4caf50;
}

.option-item.wrong .answer-icon {
    color: #f44336;
}

/* 选项悬停效果 */
.option-item:active {
    background: #e9ecef;
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 选项字母标识 */
.option-item::before {
    content: attr(data-option);
    font-weight: bold;
    margin-right: 15rpx;
    color: #007AFF;
}

/* 导航按钮样式 */
.navigation-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
    gap: 20rpx;
}

.nav-btn {
    flex: 1;
    padding: 25rpx;
    border: none;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 500;
    transition: all 0.3s ease;
}

.prev-btn {
    background: #f8f9fa;
    color: #666;
}

.next-btn {
    background: #1f80e9;
    color: white;
}

.nav-btn:active {
    transform: scale(0.98);
}

/* 返回按钮样式 */
.back-to-list {
   
    padding: 25rpx;
    background: #6c757d;
    color: white;
    border: none;
    border-radius: 12rpx;
    font-size: 28rpx;
    text-align: center;
}

.back-to-list:active {
    background: #5a6268;
    transform: scale(0.98);
}

/* 题目列表弹窗样式 */
.question-list-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.modal-content {
    position: relative;
    width: 80%;
    max-width: 600rpx;
    height: 70%;
    background: white;
    border-radius: 20rpx;
    box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

/* 弹窗头部 */
.modal-header {
    height: 20rpx;
    flex-shrink: 0;
    display: flex;
    justify-content: center; /* 水平居中 */
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    position: relative; /* 为关闭按钮定位做准备 */
}

.modal-title {
    font-size: 32rpx;
    font-weight: bold;
}

.close-btn {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 40rpx;
    font-weight: bold;
    cursor: pointer;
}

/* 统计信息 */
.stats-info {
    height: 30rpx;
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    background: #f8f9fa;
    border-bottom: 1rpx solid #e9ecef;
}

.stat-item {
    font-size: 24rpx;
    color: #666;
}

/* 题目列表滚动区域 */
.question-list-scroll {
    flex: 1;
    min-height: 0; /* 关键 */
    height: 1px; /* 触发 flex 计算 */
    padding: 20rpx 13rpx;
}

.question-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 15rpx;
}

/* 题目项样式 */
.question-list-item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80rpx;
    height: 80rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #333;
    transition: all 0.3s;
}

.question-list-item:active {
    transform: scale(0.95);
}

/* 不同状态的题目样式 */
.question-list-item.current {
    background: #bfdbf5   ;
    color: white;
    border-color: #007AFF;
    font-weight: bold;
}

.question-list-item.completed:not(.current) {
    background: #b9f1b9 ;
    color: white;
    border-color: #4CD964;
}

.question-list-item.wrong:not(.current) {
    background: #f1c6cd ;
    color: white;
    border-color: #FF3B30;
}

.question-list-item.completed.wrong {
    background: linear-gradient(135deg, #4CD964, #FF3B30);
}

/* 状态圆点 */
.status-dot {
    position: absolute;
    top: 7rpx;
    right: 7rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
}

.status-dot.completed {
    background: #b9f1b9;
}

.status-dot.wrong {
    background: #f1c6cd;
}



/* 当前题目指示器 */
.current-indicator {
    padding: 20rpx;
    text-align: center;
    background: #f8f9fa;
    border-top: 1rpx solid #e9ecef;
    font-size: 26rpx;
    color: #666;
}

/* 多选样式 */
.checkbox {
    width: 20px;
    height: 20px;
    border: 2px solid #ddd;
    border-radius: 4px;
    margin-left: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.submit-btn-container {
    margin-top: 20px;
    text-align: center;
    display: flex;
    flex-wrap: wrap; /* 按钮多的话允许换行 */
    justify-content: space-around;
    padding: 20rpx;
}

.submit-btn {
    background-color: #007AFF;
    color: white;
    border-radius: 8px;
}