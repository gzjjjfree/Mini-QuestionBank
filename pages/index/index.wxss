/* index.wxss */
/* 使用 Grid 布局的 WXSS */
/* 最简单有效的居中 */
.container {
    padding: 15rpx 10rpx; /* 最小边距 */
    background-color: #f5f5f5;
    min-height: 100vh;
    box-sizing: border-box;
}

.button-grid {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 6rpx; /* 最小间距 */
}

.practice-btn {
    width: 100%;
    display: flex;
    max-width: 240rpx; /* 限制最大宽度 */
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 6rpx 3rpx;
    background: white;
    border-radius: 6rpx;
    border: none;
    box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.1);
    min-height: 80rpx;    
    box-sizing: border-box;
}
  
  .practice-btn:active {
    transform: scale(0.98);
    background: #f0f0f0;
  }
  
  .btn-icon {
    font-size: 44rpx; /* 更小的图标 */
    margin-bottom: 8rpx;
    height: 45rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .btn-text {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
  }
  
  .file-list {
    margin: 40rpx 0;
    background: #f8f9fa;
    border-radius: 12rpx;
    padding: 30rpx;
  }
  
  .section-title {
    font-weight: bold;
    margin-bottom: 20rpx;
    display: block;
    color: #333;
  }
  
  .file-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #e0e0e0;
    background: white;
    margin-bottom: 10rpx;
    border-radius: 8rpx;
  }
  
  .file-item.active {
    background: #e6f7ff;
    border-left: 4rpx solid #1890ff;
  }
  
  .file-item:last-child {
    border-bottom: none;
  }
  
  .file-name {
    flex: 1;
    font-size: 26rpx;
    color: #666;
  }
  
  .file-status {
    font-size: 24rpx;
    color: #1890ff;
  }
  
  .data-info {
    background: #f0f9ff;
    padding: 30rpx;
    border-radius: 12rpx;
    margin-top: 30rpx;
    border: 1rpx solid #91d5ff;
  }
  
  .info-section {
    display: flex;
    flex-direction: column;
  }
  
  .info-title {
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #1890ff;
  }
  
  .info-section text {
    margin: 8rpx 0;
    color: #666;
    font-size: 28rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 100rpx 0;
    color: #999;
  }
  
  .empty-state text {
    display: block;
    margin: 10rpx 0;
  }

  

